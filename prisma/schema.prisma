// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql" // any db that has array support, not sqlite  
    url      = env("DATABASE_URL")
}

model title {
    id                Int      @id @default(autoincrement())
    title_id          String
    ordering          Int
    title             String
    region            String
    language          String
    types             String[]
    attributes        String[]
    is_original_title Boolean
}

model actor {
    id                 Int      @id @default(autoincrement())
    actor_id           String
    primary_name       String
    birth_year         Int
    death_year         Int
    primary_profession String[]
    known_for_titles   String[]
}

model rating {
    id             Int    @id @default(autoincrement())
    title_id       String
    average_rating Float
    num_votes      Int
}

model episode {
    id              Int    @id @default(autoincrement())
    parent_title_id String
    season_number   Int
    episode_number  Int
}
